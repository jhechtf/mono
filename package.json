{
  "name": "jhecht-util-mono",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "prettier:format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prettier:check": "prettier --check \"**/*.{ts,tsx,md}\"",
    "publish-packages": "turbo run build lint test && changeset version && changeset publish",
    "test": "turbo run test",
    "test:changed": "turbo run --filter=[main...HEAD] test:ci"
  },
  "devDependencies": {
    "@jhechtf/eslint-plugin": "workspace:*",
    "@jhechtf/typescript-config": "workspace:*",
    "prettier": "^3.1.1",
    "turbo": "latest"
  },
  "packageManager": "pnpm@8.9.0",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@changesets/cli": "^2.27.1"
  }
}
